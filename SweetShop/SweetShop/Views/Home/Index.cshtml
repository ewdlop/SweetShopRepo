@model HomeViewModel

@{ 
    Layout = "_Layout";
 }

<h2>@Model.Title</h2>
@foreach (var sweet in Model.Sweets)
{
    <div class="col-sm-4 col-lg-4 col-md-4">
        <div class="thumbnail">
            <img src="@sweet.ImageThumbnailUrl" alt="">
            <div class="caption">
                <h3 class="pull-right">@sweet.Price.ToString("c")</h3>
                <h4>
                    <a asp-controller="Home" asp-action="Details"
                       asp-route-id="@sweet.Id">@sweet.Name</a>
                </h4>
                <p>@sweet.ShortDescription</p>
                <p class="button">
                    <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                       asp-route-id="@sweet.Id">Add to cart</a>
                </p>
            </div>
        </div>
    </div>
}
