@model HomeViewModel
@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer
@{
    Layout = "_Layout";
    ViewData["Title"] = Localizer["Welcome to Sweet Shop Demo"];
}
<div class="jumbotron text-center" style="background-color:#87784d">
    <h2 style="color:#ffffff" align=center>@ViewData["Title"]</h2>
    <h4 style="color:#ffffff" align=center>Please enjoy!</h4>
    @await Html.PartialAsync("Carousel")
</div>


<div class="jumbotron text-center" style="background-color:#87784d">
    <h2 style="color:#ffffff" align=center>Sweets of the week</h2>
    <h4 style="color:#ffffff" align=center>Our weekly selection</h4>
    <div class="row display-flex">

        @foreach (var sweet in Model.SweetsOfTheWeek)
        {
            @await Html.PartialAsync("SweetOfTheWeekSummary", sweet)
        }

    </div>
</div>
<div class="jumbotron text-center" style="background-color:#87784d">
    <h2 style="color:#ffffff" align=center>News</h2>
</div>
<div class="jumbotron text-center" style="background-color:#87784d">
    <h2 style="color:#ffffff" align=center>Time left for the offer!</h2>
    <script src="~/content/countdown.js"></script>
    <countdown id="countdown"></countdown>
</div>
<div class="footer-copyright text-center py-3">
    @await Html.PartialAsync("_SelectLanguagePartial")
</div>
