@model Sweet

<div class="jumbotron text-center" style="background-color:#87784d">
    <h2>@Model.Name</h2>
    <div class="thumbnail">
        <img alt="Model.Name" src="@Model.ImageUrl">
        <div class="caption-full">
            <h3 class="pull-right">@Model.Price</h3>
            <h4>
                <a href="#">@Model.Name </a>
            </h4>
            <h4>@Model.ShortDescription</h4>
            <p>@Model.LongDescription</p>
            <p class="button">
                <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
                   asp-route-Id="@Model.Id">Add to cart</a>
            </p>
        </div>
    </div>
</div>